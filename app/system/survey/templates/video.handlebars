<form action="javascript:void(0);" onsubmit="odkLeaveField(this);">
<div class="form-group">
    {{> labelHint}}
    <input class="form-control" type="text" name="{{name}}" value="{{mediaPath}}" tabindex="0"
        style="background-color:lightgray;"
        disabled="true"
        />
    {{#if invalid}}
        <p>invalid</p>
    {{/if}}
    <button type="button" class="captureAction btn btn-default btn-lg" tabindex="0">Take Video</button>
    <button type="button" class="chooseAction btn btn-default btn-lg" tabindex="0">Choose Video</button>
</div>
</form>

<div class="mediaContainer">
    {{#if uriFragmentValue}}
        <video id="{{safeIdentity}}" src="{{mediaPath}}" type="{{contentType}}" tabindex="0" {{#if videoPoster}}poster="{{videoPoster}}"{{/if}}
            {{#if pre4Android}} onclick="play()"{{/if}} video="true" controls="controls">video control not supported</video>
    {{/if}}
</div>