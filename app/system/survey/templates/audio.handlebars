<form action="javascript:void(0);" onsubmit="odkLeaveField(this);">
<div class="form-group">
    {{> labelHint}}
    <input class="form-control" type="text" name="{{name}}" value="{{mediaPath}}"
            style="background-color:lightgray;" tabindex="0"
            disabled="true"
        />
    {{#if invalid}}
        <p>invalid</p>
    {{/if}}
    <button type="button" class="captureAction btn btn-default btn-lg">Capture Audio</button>
    <button type="button" class="chooseAction btn btn-default btn-lg">Choose Audio</button>
</div>
</form>

<div class="mediaContainer">
    {{#if uriFragmentValue}}
        <{{#if pre4Android}}video{{else}}audio{{/if}} id="{{safeIdentity}}" src="{{mediaPath}}" type="{{contentType}}" tabindex="0" {{#if videoPoster}}poster="{{videoPoster}}"{{/if}}
                    audio="true"{{#if pre4Android}} onclick="play()"{{/if}} controls="controls">audio control not supported</{{#if pre4Android}}video{{else}}audio{{/if}}>
        
    {{/if}}
</div>